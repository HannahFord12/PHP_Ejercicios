{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block body %}
{{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
{{ form_errors(form) }}
	<div class="form-group">
		<div class="col-xs-6">
			{{ form_row(form.firstName, {'attr': {'class':'form-control'}}) }}
		</div>
		<div class="col-xs-6">
			{{ form_row(form.secondName, {'attr': {'class':'form-control'}}) }}
		</div>
	</div>
	<div class="form-group">
		<div class="col-xs-12">
			{{ form_row(form.emailAddres, {'attr': {'class':'form-control'}}) }}
		</div>
	</div>
	<div class="form-group">
		<div class="col-xs-12">
			{{ form_row(form.title, {'attr': {'class':'form-control'}}) }}
		</div>
	</div>
	<div class="form-group">
		<div class="col-xs-12">
			{{ form_row(form.message, {'attr': {'class':'form-control'}}) }}
			{{ form_row(form.Send, {'attr': {'class':'pull-right btn btn-lg sr-button'}}) }}
		</div>
	</div>
{{ form_end(form) }}

{% endblock %}