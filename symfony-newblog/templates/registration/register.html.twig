{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="titlepage" style="color:white;">
        <h1>Register</h1>
    </div>
    <div class="col-md-12 ">
    {{ form_start(registrationForm) }}
        <div class="col-md-12 ">{{ form_row(registrationForm.email,  {'attr': {'class':'form-control'}}) }}</div>
        <div class="col-md-12 ">{{ form_row(registrationForm.name,  {'attr': {'class':'form-control'}}) }}</div>
        <div class="col-md-12 ">{{ form_row(registrationForm.plainPassword, {'attr': {'class':'form-control'}}, {
            label: 'Password'
        }) }}<div>
        <div class="col-md-12 ">{{ form_row(registrationForm.agreeTerms) }}</div>

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
